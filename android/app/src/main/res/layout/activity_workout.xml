<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"

    android:orientation="vertical"

    android:layout_marginLeft="5dp"
    android:layout_marginTop="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="15dp"

        android:background="@drawable/button_navy"

        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/chest"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:text="Chest"

            android:textSize="30sp"

            android:layout_gravity="center"

            android:layout_marginLeft="40dp"

            android:background="@drawable/button_blue"

            android:textColor="#ffffff"

            android:id="@+id/btn_chest"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="15dp"
        android:background="@drawable/button_navy"

        android:orientation="horizontal"
        >


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/back"

            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:text="Back"

            android:textSize="30sp"

            android:layout_gravity="center"

            android:layout_marginLeft="40dp"

            android:textColor="#ffffff"

            android:background="@drawable/button_blue"

            android:id="@+id/btn_back"
            />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="15dp"

        android:background="@drawable/button_navy"

        android:orientation="horizontal"
        >


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:src="@drawable/shoulders"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:text="Shoulders"

            android:textSize="30sp"

            android:layout_gravity="center"

            android:layout_marginLeft="40dp"

            android:textColor="#ffffff"

            android:background="@drawable/button_blue"

            android:id="@+id/btn_shoulders"
            />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="15dp"

        android:background="@drawable/button_navy"

        android:orientation="horizontal"
        >


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:src="@drawable/legs"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:text="Legs"

            android:textSize="30sp"

            android:layout_gravity="center"

            android:layout_marginLeft="40dp"

            android:background="@drawable/button_blue"

            android:textColor="#ffffff"

            android:id="@+id/btn_legs"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginBottom="15dp"

        android:background="@drawable/button_navy"
        android:orientation="horizontal"
        >


        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/arms"/>


        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:text="Arms"

            android:textSize="30sp"

            android:layout_gravity="center"

            android:layout_marginLeft="40dp"

            android:textColor="#ffffff"

            android:background="@drawable/button_blue"

            android:id="@+id/btn_arms"
            />



    </LinearLayout>




</LinearLayout>